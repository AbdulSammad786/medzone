<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/toplayout"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/newback"
        android:layout_height="wrap_content">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/slider"
            android:layout_margin="3dp"
            android:background="@drawable/articletopimage"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPageAndroid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/on"
            android:id="@+id/third"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/third"
            android:background="@drawable/on"
            android:id="@+id/second"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/third"
            android:background="@drawable/on"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/fouth"
            />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/fouth"
            android:background="@drawable/on"
            android:id="@+id/fifth"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/second"
            android:background="@drawable/off"
            android:id="@+id/first"
            />
    </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liistview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/toplayout"
        android:layout_above="@+id/botomlayout"
        ></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/botomlayout"
        android:orientation="vertical"
        android:background="@color/appred"
        android:layout_alignParentBottom="true"
        android:weightSum="1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="3" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.98"
                android:gravity="center"
                android:onClick="home"
                android:orientation="vertical"
                >
                <ImageButton
                    android:onClick="home"
                    android:layout_width="40dp"
                    android:background="@drawable/donation"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate"
                    android:onClick="home"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:background="@android:color/white"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="menu"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="40dp"
                    android:onClick="menu"
                    android:background="@drawable/cash"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.98"></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell"
                    android:onClick="menu"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:background="@android:color/white"
                ></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="location"
                android:orientation="vertical"
                >
                <ImageButton
                    android:onClick="location"
                    android:layout_width="40dp"
                    android:background="@drawable/searchnew"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:onClick="location"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>