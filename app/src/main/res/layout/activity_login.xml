<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginTop="30dp"
                android:id="@+id/text"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Login to MedZon"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:id="@+id/l1"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/text"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/username"
                        style="@style/myEditText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edt_text"
                        android:ems="5"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-light"
                        android:hint="Sammad"
                        android:inputType="textEmailAddress" />
                    <EditText
                        android:id="@+id/pass"
                        style="@style/myEditText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edt_text"
                        android:ems="5"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-light"
                        android:hint="*******"
                        android:inputType="textEmailAddress" />
                    <Button
                        android:id="@+id/act_login_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/appred"
                        android:text="Login"
                        android:onClick="login"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/forgetpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-light"
                        android:onClick="fp"
                        android:text="Forgot Password ?" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@+id/l"
        >
        <Button
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/facebookbutton"
            android:text="FaceBook"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <Button
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#e0523b"
            android:text="Google"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/l"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:onClick="forgetPassword ?"
                android:text="Don't Have an account ?" />
            <Button
                android:id="@+id/exsignup"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_below="@+id/signup"
                android:layout_centerHorizontal="true"
                android:textColor="@color/appred"
                android:fontFamily="sans-serif-light"
                android:onClick="signup"
                android:text="Sign up"
                />
        </RelativeLayout>
    </RelativeLayout>


